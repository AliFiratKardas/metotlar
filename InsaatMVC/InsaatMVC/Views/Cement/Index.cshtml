@using InsaatMVC.Models;
@model List<Cement>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>Toplam @Model.Count çeşit çimento bulunmaktadır</h4>

            </div>
            <div class="card card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Marka</th>
                            <th>Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Cement cement in Model)
                        {
                        <tr>
                            <td>@cement.ID</td>
                            <td>@cement.Marka</td>
                            <td>@cement.Fiyat</td>
                            <td>
                                <a href="/Cement/Details/@cement.ID" class="btn btn-primary">Özellikler</a>
                            </td>
                            
                        </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>
    </div>
</body>
</html>
